<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      <li>
         Name: <%= user.name %>
        <span class="profile-link">
          <%= link_to 'See Profile',  user_path(user) %>

        </span>
      </li>
    <% end %>
  </ul>
  <h3>Pending invitations</h3>
  <% @pending_invitations.uniq.each do |invitation| %>
  <ul>
  <li>Name: <%= invitation.name.capitalize%></li>
  </ul>
  <% end %>
</section>
